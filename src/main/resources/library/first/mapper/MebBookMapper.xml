<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="mylibrary.first.dao.MebBookDao">
  
  <resultMap type="mebBook" id="mebBookMap">
    <id column="meb_no"  property="no"/>
    <id column="book_no"  property="bookNo"/>
    <result column="read_date"  property="readDate"/>
    
  <association property="member" javaType="Member">
    <id column="meb_no"  property="no"/>
    <result column="meb_id"   property="id"/>
    <result column="meb_pw"  property="pw"/>
  </association>
    
  <association property="book" javaType="Book">
    <id column="book_no"  property="bookNo"/>
    <result column="book_name"   property="bookName"/>
    <result column="book_author"  property="bookAuthor"/>
    <result column="book_price"  property="bookPrice"/>
  </association>
  
  </resultMap>
  
  
  
  <sql id="select1">
    select
     r.meb_no,
     r.book_no,
     read_date
    from
     MEB_RBOOK r
     left outer join member m on r.meb_no = m.meb_no
     left outer join book b on r.book_no = b.book_no
  </sql>
  
  
  <!-- 책 추가(읽은 책) -->
  <insert id="insert" parameterType="book"
          useGeneratedKeys="true" keyColumn="meb_no" keyProperty="no">
    insert into MEB_RBOOK(
      meb_no,
      book_no,
      read_date)
    values(
      #{no},
      #{bookNo},
      #{readDate}
  </insert>
  
  
  <!-- 책 삭제(읽은 책) -->
  <!-- 책 한개를 삭제해야 하니까 책번호로 삭제함. -->
  <delete id="remove" parameterType="int">
    delete from MEB_RBOOK
    where book_no = #{bookNo}
  </delete>
  
  <!-- 읽은 날짜 수정 --> <!-- 책 데이터는 수정할수 없게. -->
  <update id="update" parameterType="book">
    update MEB_RBOOK
      set
       read_date = #{readDate}
      where
       book_no = #{no}
  </update>
  
</mapper>










